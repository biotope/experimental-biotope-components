{
	"compilerOptions": {
		"allowJs": true,
		"jsx": "react",
		"module": "es2015",
		"moduleResolution": "Node",
		"noImplicitAny": false,
		"sourceMap": true,
		"suppressImplicitAnyIndexErrors": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES5",
		"lib": [
			"es2017",
			"dom"
		]
	},
	"awesomeTypescriptLoaderOptions": {
		"useCache": true,
		"reportFiles": [
			"src/**/*.{ts,tsx}"
		]
	},
	"exclude": [
		"patterns",
		"test",
		"dist",
		".tmp",
		"**/*.spec.ts"
	]
}